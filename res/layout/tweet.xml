<view class="com.lonian.android.layout.MaxWidthLinearLayout" android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:padding="10dp">
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/twitter_account"></TextView>
<Spinner android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/account_list"></Spinner>
<RelativeLayout android:addStatesFromChildren="true" android:layout_height="wrap_content" android:layout_weight="1.0" android:layout_width="fill_parent"> 
<EditText android:imeOptions="actionSend" android:layout_width="fill_parent" android:id="@+id/tweet" android:freezesText="true" android:layout_height="wrap_content" android:gravity="top|left" android:maxLines="4" android:maxLength="160" android:inputType="textShortMessage|textMultiLine|textCapSentences|textAutoCorrect"></EditText>
<TextView android:textSize="11.0sp" android:textColor="#FFFFFFFF" android:background="#7f000000" android:paddingLeft="3.0dip" android:paddingRight="3.0dip" android:gravity="right" android:id="@+id/tweet_length" android:text="140" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentRight="true"></TextView>
</RelativeLayout>
<Button android:layout_height="wrap_content" android:id="@+id/btn_send" android:layout_width="fill_parent" android:text="@string/btn_send_tweet"></Button>
</view>
